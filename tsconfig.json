{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "strict": true,
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@svgs/*": ["./src/svgs/*"],
      "@types/*": ["./src/types/*"],
      "@navigation/*": ["./src/navigation/*"],
      "@screens/*": ["./src/navigation/screens/*"],
      "@utils/*": ["./src/utils/*"],
      "@hooks/*": ["./src/hooks/*"],
    }
  },
  "include": [
    "env.d.ts",
    "src",
    "nativewind-env.d.ts"
  ]
}